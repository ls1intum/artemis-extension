{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/iris-thaumantias"
      ],
      "outFiles": [
        "${workspaceFolder}/iris-thaumantias/dist/**/*.js"
      ],
      "preLaunchTask": "npm: watch - iris-thaumantias"
    },
    {
      "name": "Run Extension (No Watch)",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/iris-thaumantias"
      ],
      "outFiles": [
        "${workspaceFolder}/iris-thaumantias/dist/**/*.js"
      ]
    },
    {
      "name": "Extension Tests",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/iris-thaumantias",
        "--extensionTestsPath=${workspaceFolder}/iris-thaumantias/out/test/suite/index"
      ],
      "outFiles": [
        "${workspaceFolder}/iris-thaumantias/out/test/**/*.js"
      ],
      "preLaunchTask": "npm: pretest - iris-thaumantias"
    }
  ]
}